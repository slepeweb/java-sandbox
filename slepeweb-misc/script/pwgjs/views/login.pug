extends layout

block content
	h1 Password Manager
	h3 Login
	p Please enter your credentials
	
	if err
		p(class="red")
			strong= err
  
	form(action="", method="post")
		table#main-table
			tr
				td.label Username
				td
					input(type="text" name="username")
			tr
				td.label Password
				td
					input(type="password" name="password")
			tr
				td.label Key
				td
					input(type="password" name="key")
		
		input(type="submit", value="Submit")
