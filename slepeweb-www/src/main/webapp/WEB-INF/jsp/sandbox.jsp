<script>
$(function() {
	$("#tabs").tabs( 
	  //{active: 0}
	);
	
	$("#lotteryrefresh").click(function(e) {		
		$.ajax({
			url : "/rest/lottery/numbers/3",
			dataType : "json",
			cache : false
		}).done(function(resp) {
			var html = "<table class='compact' width='450px' border='1'><tr>";
			for ( var i = 0; i < resp.lines.length; i++) {
				html += "<td width='33%'><u>" + resp.lines[i] + "</u></td>";
			}
			html += "</tr></table>";
			$("#lotterynumbers").append(html);
		}).fail(function(jqXHR, status) {
			//console.log(status);
		});		
	});
	
	$("#lotteryclear").click(function(e) {
		$("#lotterynumbers").empty();
	});
	
	$("#lotteryrefresh").click();
});	
</script>

<div id="tabs">
	<ul>
    <li><a href="#tabs-1">JAX-RS</a></li>
    <li><a href="#tabs-2">JAX-WS</a></li>
  </ul>

	<div id="tabs-1" class="compact">
		<article class="first">
			<h2>Sandbox</h2>
			<h3>Jersey, JAX-RS</h3>
			<p>
				The lottery numbers below are generated by a web service (REST) that
				is hosted on this server. The web service uses the Jersey
				implementation of JAX-RS. An ajax request is made to retrieve the JSON
				representation of this resource: <a href="/rest/lottery/numbers/3">Call
					service</a> for alternative XML representation ...
			</p>
			<div id="lotterynumbers"></div>
			<button type="button" class="button" id="lotteryrefresh">More numbers</button>
			<button type="button" class="button" id="lotteryclear">Clear</button>
		</article>
	</div>
	
	<div id="tabs-2" class="compact">
		<article class="first">
			<h2>JAX-WS</h2>
		</article>
	</div>
</div>