<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect"
         dynamicConfig="true" name="acmCache">

  <diskStore path="${user.home}/acm/ehcache" />
  
  <defaultCache
      maxElementsInMemory="10000"
      eternal="false"
      timeToLiveSeconds="3600"
      overflowToDisk="true"
      diskSpoolBufferSizeMB="30"
      maxElementsOnDisk="10000"
      diskPersistent="true" 
      diskExpiryThreadIntervalSeconds="120"
      memoryStoreEvictionPolicy="LRU"/>
      
  <cache name="itemCache"
         maxElementsInMemory="10000"
         maxElementsOnDisk="20000"
         overflowToDisk="true"
         diskPersistent="true" 
         eternal="true"
         memoryStoreEvictionPolicy="LFU">
         
         
  	<cacheEventListenerFactory class="com.sdl.navcache.AcmCacheEventListenerFactory" properties="" />
	  <bootstrapCacheLoaderFactory class="com.sdl.navcache.AcmBootstrapCacheLoaderFactory" properties="bootstrapAsynchronously=true"/>
  </cache>
  
</ehcache>
