<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
  <display-name>com.slepeweb.sandbox</display-name>
  
	<!-- For Spring MVC -->
  <servlet>
    <servlet-name>slepeweb</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
	<!-- For JAX-RS -->
	<servlet>
	    <servlet-name>Jersey Web Application</servlet-name>
	    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	    <init-param>
	        <param-name>jersey.config.server.provider.packages</param-name>
	        <param-value>com.slepeweb.sandbox.ws.rest</param-value>
	    </init-param>
	    <load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- For JAX-WS -->
	<servlet>
	    <servlet-name>SOAP services</servlet-name>
	    <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
	    <load-on-startup>3</load-on-startup>
	</servlet>
	
	<!-- For Tiles -->
  <context-param>
    <param-name>org.apache.tiles.factory.TilesContainerFactory.MUTABLE</param-name>
    <param-value>false</param-value>
  </context-param>
  
	<!-- For Spring MVC -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

	<!-- For JAX-WS -->
	<listener>
		<listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
	</listener>

  <servlet-mapping>
    <servlet-name>slepeweb</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
	<!-- For JAX-RS -->
  <servlet-mapping>
    <servlet-name>Jersey Web Application</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
  
</web-app>